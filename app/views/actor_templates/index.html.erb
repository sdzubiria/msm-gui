<h1>List of all actors</h1>

<hr>

<form action="/insert_actor" method="post">
  <input type="text" name="query_name" placeholder="Name" required>
  <input type="date" name="query_dob" placeholder="Date of Birth" required>
  <textarea name="query_bio" placeholder="Biography" rows="3"></textarea>
  <input type="text" name="query_image" placeholder="Image URL" required>
  <button type="submit">Create Actor</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th>Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td><%= actor.id %></td>
    <td><img src="<%= actor.image %>" style="width: 100px;"></td>
    <td><%= actor.name %></td>
    <td><%= actor.dob %></td>
    <td>
      <a href="/actors/<%= actor.id %>">Show</a> |
      <a href="/delete_actor/<%= actor.id %>" data-confirm="Are you sure?">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
